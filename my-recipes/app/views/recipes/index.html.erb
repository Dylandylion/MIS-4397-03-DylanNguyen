
<h1>All Recipes</h1>
    <h2>
        Total Number of Recipes: <%= @recipes.size %>
        #Using size instead of all
    </h2>
        <ul>
            <% @recipes.each do |r| %>
            <li>
                <h3>
                    <%= r.name %>
                </h3>
                <p>
                    <%= r.description %>
                </p>
            </li>
            <% end %>
        </ul>